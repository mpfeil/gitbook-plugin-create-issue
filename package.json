{
  "name": "gitbook-plugin-create-issue",
  "version": "0.1.0",
  "description": "Gitbook plugin for reporting issues on github",
  "keywords": [
    "github",
    "issue",
    "gitbook"
  ],
  "engines": {
    "gitbook": ">2.6.7"
  },
  "gitbook": {
    "properties": {
      "label": {
        "default": "Create Issue",
        "title": "Label for the create button",
        "type": [
          "string",
          "object"
        ]
      },
      "labelSubmitButton": {
        "default": "Submit",
        "title": "Label for the submit button",
        "type": [
          "string",
          "object"
        ]
      },
      "labelCancelButton": {
        "default": "Cancel",
        "title": "Label for the cancel button",
        "type": [
          "string",
          "object"
        ]
      },
      "placeholder": {
        "default": {
          "title": "Title",
          "text": "Leave a comment."
        },
        "title": {
          "default": "Title",
          "title": "Placeholder for title input field",
          "type": [
            "string",
            "object"
          ]
        },
        "text": {
          "default": "Leave a comment.",
          "title": "Placeholder for textarea field",
          "type": [
            "string",
            "object"
          ]
        },
        "type": [
          "object"
        ]
      },
      "github": {
        "repo": {
          "default": "",
          "title": "GitHub repo for creating issues",
          "type": ["string"]
        },
        "token": {
          "default": "",
          "token": "OAuth token for creating issues",
          "type": ["string"]
        }
      },
      "alerts": {
        "default": {
          "info": "Your issue was created successfully.",
          "danger": "Your issue was not created successfully."
        },
        "info": {
          "default": "Your issue was created successfully.",
          "title": "Text if issue was created successfully",
          "type": ["string", "object"]
        },
        "danger": {
          "default": "Your issue was not created successfully.",
          "title": "Text if issue was not created successfully",
          "type": ["string", "object"]
        }
      }
    }
  },
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mpfeil/gitbook-plugin-create-issue.git"
  },
  "author": "Matthias Pfeil <matthias.pfeil@wwu.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mpfeil/gitbook-plugin-create-issue/issues"
  },
  "homepage": "https://github.com/mpfeil/gitbook-plugin-create-issue#readme"
}
